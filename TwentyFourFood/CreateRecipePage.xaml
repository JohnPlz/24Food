<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:TwentyFourFood.Resources.Strings"
             x:Class="TwentyFourFood.CreateRecipePage"
             Title="{x:Static strings:AppResources.NewRecipeTitle}"
             BackgroundColor="{StaticResource BulmaBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="{x:Static strings:AppResources.NewRecipeTitle}" Style="{StaticResource PageTitle}" />
            <Label Text="{x:Static strings:AppResources.RecipesSubtitle}" Style="{StaticResource PageSubtitle}" />

            <Border Style="{StaticResource BulmaBox}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{x:Static strings:AppResources.NameLabel}" Style="{StaticResource FieldLabel}" />
                        <Border Style="{StaticResource BulmaInputBorder}">
                            <Entry Text="{Binding Name}"
                                   Placeholder="{x:Static strings:AppResources.RecipeNamePlaceholder}"
                                   Style="{StaticResource BulmaEntry}" />
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="{x:Static strings:AppResources.CategoryLabel}" Style="{StaticResource FieldLabel}" />
                        <Border Style="{StaticResource BulmaInputBorder}">
                            <Entry Text="{Binding Category}"
                                   Placeholder="{x:Static strings:AppResources.RecipeCategoryPlaceholder}"
                                   Style="{StaticResource BulmaEntry}" />
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="{x:Static strings:AppResources.ServingsLabel}" Style="{StaticResource FieldLabel}" />
                        <Border Style="{StaticResource BulmaInputBorder}">
                            <Entry Text="{Binding ServingsText}"
                                   Placeholder="{x:Static strings:AppResources.ServingsPlaceholder}"
                                   Keyboard="Numeric"
                                   Style="{StaticResource BulmaEntry}" />
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="{x:Static strings:AppResources.NotesLabel}" Style="{StaticResource FieldLabel}" />
                        <Border Style="{StaticResource BulmaInputBorder}">
                            <Editor Text="{Binding Notes}"
                                    Placeholder="{x:Static strings:AppResources.RecipeNotesPlaceholder}"
                                    AutoSize="TextChanges"
                                    Style="{StaticResource BulmaEditor}" />
                        </Border>
                    </VerticalStackLayout>

                    <Button Text="{x:Static strings:AppResources.AddRecipeButton}"
                            Command="{Binding AddRecipeCommand}"
                            Style="{StaticResource PrimaryButton}" />

                    <Label Text="{Binding StatusMessage}" Style="{StaticResource StatusText}">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding StatusMessage}" Value="">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
