<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TwentyFourFood.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TwentyFourFood"
    xmlns:strings="clr-namespace:TwentyFourFood.Resources.Strings"
    Title="TwentyFourFood">

    <TabBar>
        <ShellContent
            Title="{x:Static strings:AppResources.IngredientsTitle}"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="{x:Static strings:AppResources.NewIngredientTitle}"
            ContentTemplate="{DataTemplate local:CreateIngredientPage}"
            Route="CreateIngredientPage" />
        <ShellContent
            Title="{x:Static strings:AppResources.RecipesTitle}"
            ContentTemplate="{DataTemplate local:RecipesPage}"
            Route="RecipesPage" />
        <ShellContent
            Title="{x:Static strings:AppResources.NewRecipeTitle}"
            ContentTemplate="{DataTemplate local:CreateRecipePage}"
            Route="CreateRecipePage" />
    </TabBar>

</Shell>
